<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc">
<keyboard>
  <keybind key="A-F4">
    <action name="Close"/>
  </keybind>
	<keybind key="XF86AudioRaiseVolume">
		<action name="Execute">
			<command>amixer set PCM 250+</command>
		</action>
	</keybind>

	<keybind key="XF86AudioLowerVolume">
		<action name="Execute">
			<command>amixer set PCM 250-</command>
		</action>
	</keybind>

	<keybind key="XF86AudioMute">
		<action name="Execute">
			<command>/bin/sh -c "amixer get PCM | grep off > /dev/null &amp;&amp; amixer -q set PCM unmute > /dev/null || amixer -q set PCM mute > /dev/null"</command>
		</action>
	</keybind>

</keyboard>
</openbox_config>