upstream backend_flask{
    server 127.0.0.1:8080;
}

server {
    listen	80;
    allow	172.20.1.0/24;
    allow	all;
    server_name 127.0.0.1
		        172.20.1.1
		        easydk.local;

    location / {
      include proxy_params;
      proxy_pass http://backend_flask;
    }

    location /static {
        alias /opt/flaskinterface/static;
        expires 1d;
    }

    location /preview {
        alias /home/edkuser/.kioskfiles/ukplugs;
        gzip  off;
        add_header Cache-Control "no-store";
        add_header Access-Control-Allow-Origin *;
    }

    location /kioskview {
        alias /home/edkuser/.kioskdata;
        error_page 404 immoplus/html/assets/404.html;
        gzip  off;
        # cache 1 day
        expires 1d;
        add_header Cache-Control "private, no-transform";
        add_header Access-Control-Allow-Origin *;
        # no cache for debugging
        # add_header Cache-Control "no-store";
    }

    location /socket.io {
        include proxy_params;
        proxy_http_version 1.1;
        proxy_buffering off;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_pass http://127.0.0.1:8080/socket.io;
    }
}
